{ (x == #x) * (k == #k) * list(#x, #vs) }
function list_remove_weak(x, k) {
  if (x == null) {
    skip
  } else {
    v := [x];
    next := [x + 1];
    if (v == k){
      free(x);
      x := list_remove_weak(next, k)
    } else {
      z := list_remove_weak(next, k);
      [x + 1] := z
    }
  };
  return x
}
